<% layout("/layouts/boilerplate") %>

<!-- Main Content -->
<body class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(to bottom right, #e0f2fe, #fffaf0); font-family: 'Poppins', sans-serif;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
          <div class="card-body p-4 text-center">
            <!-- Avatar Circle -->
            <div class="bg-gradient rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 60px; height: 60px; background: linear-gradient(to right, #7c3aed, #6b21a8);">
              <i class="fas fa-user text-white fs-4"></i>
            </div>
            <h3 class="card-title fw-bold mb-2">What should we call you?</h3>
            <p class="text-muted mb-3 small">Set your Drop Point username</p>

            <!-- Error -->
            <% if (error) { %>
              <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

            <!-- Form -->
            <form method="POST" action="/set-username" class="mt-3">
              <div class="mb-3 text-start">
                <label for="username" class="form-label fw-semibold">Username</label>
                <input type="text" class="form-control form-control-lg text-center fw-semibold" id="username" name="username" placeholder="e.g. vivek123" required style="letter-spacing: 1px;" />
              </div>

              <div class="d-grid mt-3">
                <button type="submit" class="btn btn-success btn-lg rounded-pill">
                  <i class="fas fa-arrow-right me-2"></i>Ready to Go!!
                </button>
              </div>
            </form>

            <!-- Link -->
            <p class="text-center mt-4 text-muted small">
              Already have an account? <a href="/login" class="text-decoration-none fw-semibold text-primary">Login here</a>
            </p>
          </div>  
        </div>
      </div>
    </div>
  </div>
</body>
