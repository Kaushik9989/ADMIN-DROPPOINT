<div class="d-flex justify-content-between mb-3">
  <div>
    <h4 class="fw-semibold">API Keys</h4>
    <p class="text-muted small">Manage partner API access and permissions</p>
  </div>
  <a href="/admin/apikeys/create" class="btn btn-success">+ Generate Key</a>
</div>

<% apiKeys.forEach(key => { %>
  <div class="card mb-3 shadow-sm">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-0"><%= key.name %></h5>
          <small class="text-muted"><%= key.partner %></small>
        </div>
        <span class="badge bg-<%= key.status === 'active' ? 'success' : 'secondary' %>"><%= key.status %></span>
      </div>

      <div class="mt-3">
        <label class="form-label">API Key</label>
        <div class="input-group">
          <input type="text" class="form-control" value="<%= key.key %>" readonly>
          <button class="btn btn-outline-secondary" onclick="navigator.clipboard.writeText('<%= key.key %>')">Copy</button>
        </div>
      </div>

      <div class="mt-3">
        <strong>Permissions:</strong>
        <% key.permissions.forEach(p => { %>
          <span class="badge bg-light text-dark border me-1"><%= p %></span>
        <% }) %>
      </div>

      <div class="mt-3 d-flex gap-2">
        <a href="#" class="btn btn-outline-primary btn-sm">View Usage</a>
        <a href="#" class="btn btn-outline-secondary btn-sm">Edit</a>
        <a href="#" class="btn btn-danger btn-sm">Revoke</a>
      </div>

      <div class="row mt-3 text-muted small">
        <div class="col">Last Used: <%= key.lastUsed %></div>
        <div class="col">Created: <%= key.createdAt %></div>
      </div>
    </div>
  </div>
<% }) %>
