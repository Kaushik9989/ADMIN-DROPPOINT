
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Funnel Dashboard</title>

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

 <style>
  body {
    background: linear-gradient(135deg, #eef2ff, #fef9ff);
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    overflow-x: hidden;
  }

  .main-wrapper {
    margin-left: 250px;
    padding: 2rem;
    transition: margin-left 0.3s ease;
  }

  nav.sidebar {
    width: 250px;
    height: 100vh;
    position: fixed;
    top: 56px;
    left: 0;
    background: #ffffff;
    padding: 1rem;
    box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
    z-index: 1040;
  }

  @media (max-width: 991px) {
    nav.sidebar {
      display: none;
    }

    .main-wrapper {
      margin-left: 0;
      padding: 1rem;
    }
  }

  .admin-header h2 {
    font-weight: 600;
    color: #0d6efd;
    margin-bottom: 1rem;
  }

  .table-wrapper {
    background: #fff;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 0 14px rgba(0, 0, 0, 0.05);
  }

  .table th,
  .table td {
    vertical-align: middle;
    font-size: 0.95rem;
  }

  .table-hover tbody tr:hover {
    background-color: #f8f9fa;
  }

  .badge-status {
    font-size: 0.8rem;
    padding: 0.35em 0.6em;
  }

  .btn-delete {
    font-size: 0.8rem;
    padding: 0.25rem 0.6rem;
  }
</style>

</head>

<!-- Navbar -->
<%- include("./imports/adminTopbar") %>

<!-- Sidebar -->
<%- include("./imports/adminSidebar") %>

<!-- Main Content -->
<div class="main-wrapper">
  <div class="container-fluid mt-5">
    <div class="admin-header mb-3">
      <h2>ðŸ‘¥ User Management</h2>
    </div>

    <div class="table-wrapper">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Login Method</th>
            <th>Created</th>
            <th>Status</th>
            <th class="text-center">Actions</th>
            <th>Last Login</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((u, index)=> { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= u.username || "N/A" %></td>
              <td><%= u.phone || "â€”" %></td>
              <td><%= u.email || "â€”" %></td>
              <td>
                <span class="badge bg-info text-dark badge-status">
                  <%= u.phone ? "Phone OTP" : "Google OAuth" %>
                </span>
              </td>
              <td><%= new Date(u.createdAt).toLocaleString("en-IN") %></td>
              <td>
                <% const last = new Date(u.lastLogin); const now = new Date(); const diffDays = (now - last) / (1000 * 60 * 60 * 24); %>
                <% if (!u.lastLogin) { %>
                  <span class="badge bg-secondary badge-status">Inactive</span>
                <% } else if (diffDays <= 20) { %>
                  <span class="badge bg-success badge-status">Active</span>
                <% } else { %>
                  <span class="badge bg-warning text-dark badge-status">Inactive</span>
                <% } %>
              </td>
              <td class="text-center">
                <% if (process.env.NODE_ENV !== "production") { %>
                  <form action="/admin/users/<%= u._id %>/delete" method="POST" onsubmit="return confirm('Delete this user?');" class="d-inline">
                    <button class="btn btn-sm btn-outline-danger btn-delete">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                <% } else { %>
                  <span class="text-muted small">Locked</span>
                <% } %>
              </td>
              <td><%= u.lastLogin ? new Date(u.lastLogin).toLocaleString("en-IN") : "â€”" %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>