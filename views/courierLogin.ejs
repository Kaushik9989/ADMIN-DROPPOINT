<%- layout("layouts/boilerplate") %>
<h2>Courier Login</h2>
<form action="/courier/login" method="POST" style="max-width: 400px;">
  <div class="form-group">
    <label>Phone Number:</label>
    <input type="text" name="phone" class="form-control" required />
  </div>
  <button class="btn btn-primary mt-3">Send OTP</button>
</form>
<% if (messages.success && messages.success.length > 0) { %>
  <div class="alert alert-success"><%= messages.success[0] %></div>
<% } %>

<% if (messages.error && messages.error.length > 0) { %>
  <div class="alert alert-danger"><%= messages.error[0] %></div>
<% } %>