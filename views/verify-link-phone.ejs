<% layout("/layouts/boilerplate") %>

<style>
  .verify-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    background: #f8fafc;
  }

  .verify-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    width: 100%;
    max-width: 420px;
  }

  .verify-btn {
    background: #28a745;
    border: none;
    font-weight: 500;
    transition: background 0.2s ease;
  }

  .verify-btn:hover {
    background: #218838;
  }

  .verify-input {
    height: 48px;
    font-size: 1rem;
  }
</style>

<div class="verify-container">
  <div class="verify-card">
    <h4 class="text-center mb-4">üîê Verify Your Phone</h4>

    <% if (error) { %>
      <div class="alert alert-danger text-center small">
        <%= error %>
      </div>
    <% } %>

    <form method="POST" action="/verify-link-phone">
      <div class="mb-3">
        <label for="otp" class="form-label">Enter OTP</label>
        <input
          type="text"
          class="form-control verify-input"
          name="otp"
          maxlength="6"
          placeholder="6-digit code"
          required
        />
      </div>
      <button type="submit" class="btn verify-btn w-100 py-2">
        ‚úÖ Verify & Continue
      </button>
    </form>
  </div>
</div>
