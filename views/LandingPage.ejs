<% layout('/layouts/boilerplate') %>

<div class="container text-center mt-5 pt-4">
  <h1 class="mb-4 fw-bold">Welcome to DropPoint</h1>
  <p class="lead mb-5">Choose your action to get started</p>

  <div class="row justify-content-center">
    <div class="col-md-3 mb-4">
      <a href="/user/pickup" class="text-decoration-none">
        <div class="card h-100 shadow border-0 hover-scale">
          <div class="card-body">
            <i class="fas fa-box-open fa-3x text-primary mb-3"></i>
            <h5 class="card-title">Pickup</h5>
          </div>
        </div>
      </a>
    </div>

    <div class="col-md-3 mb-4">
      <a href="/user/dropoff" class="text-decoration-none">
        <div class="card h-100 shadow border-0 hover-scale">
          <div class="card-body">
            <i class="fas fa-box fa-3x text-success mb-3"></i>
            <h5 class="card-title">Drop-off</h5>
          </div>
        </div>
      </a>
    </div>

   
  </div>
</div>

<style>
.hover-scale:hover {
  transform: scale(1.05);
  transition: 0.3s ease-in-out;
}
</style>

<!-- Font Awesome (for icons) -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
