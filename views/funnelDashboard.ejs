<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Funnel Analytics | DropPoint</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

  <style>
    :root {
      --bg-body: #f8fafc;
      --border-color: #e2e8f0;
      --indigo-accent: #4f46e5;
      --card-shadow: 0 1px 3px rgba(0, 0, 0, 0.05);
    }

    body {
      background-color: var(--bg-body);
      font-family: 'Inter', sans-serif;
      color: #1e293b;
    }

    .main-wrapper {
      margin-left: 260px; /* Aligned with your sidebar */
      padding: 90px 2rem 2rem 2rem;
      transition: all 0.3s ease;
    }

    /* Analytics Cards */
    .stat-card {
      background: white;
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: var(--card-shadow);
      height: 100%;
    }

    .stat-label {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #64748b;
      font-weight: 700;
      margin-bottom: 0.5rem;
      display: block;
    }

    .stat-value {
      font-size: 1.75rem;
      font-weight: 800;
      color: #0f172a;
    }

    /* Funnel Specific UI */
    .chart-container {
      background: white;
      border: 1px solid var(--border-color);
      border-radius: 16px;
      padding: 2rem;
      box-shadow: var(--card-shadow);
    }

    .section-header {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 1.5rem;
      font-weight: 700;
      color: #334155;
    }

    /* Table Enhancements */
    .table-custom {
      border: 1px solid #f1f5f9;
      border-radius: 8px;
      overflow: hidden;
    }

    .table-custom thead {
      background: #f8fafc;
    }

    .table-custom th {
      font-size: 0.75rem;
      text-transform: uppercase;
      color: #64748b;
      border-bottom: 1px solid var(--border-color);
    }

    /* Drop-off Visualizer */
    .dropoff-text {
      color: #ef4444;
      font-weight: 600;
      font-size: 0.85rem;
    }

    @media (max-width: 991px) {
      .main-wrapper { margin-left: 0; padding: 100px 1rem 1.5rem; }
    }
  </style>
</head>

<body class="min-vh-100">
  <%- include("./imports/adminTopbar") %>
  <%- include("./imports/adminSidebar") %>

  <div class="main-wrapper">
    <div class="container-fluid">
      
      <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
          <h2 class="fw-bold mb-1">Conversion Funnel</h2>
          <p class="text-muted small mb-0">Track user drop-offs from landing to parcel submission.</p>
        </div>
        <div class="badge bg-white text-primary border px-3 py-2 rounded-pill shadow-sm">
          <i class="fa-solid fa-clock-rotate-left me-2"></i>Real-time Data
        </div>
      </div>

      <div class="row g-4 mb-4">
        <div class="col-md-3">
          <div class="stat-card">
            <span class="stat-label">Total Visits</span>
            <div class="stat-value"><%= totalVisits %></div>
            <div class="text-muted small mt-2"><i class="fa-solid fa-users me-1"></i> Unique sessions</div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <span class="stat-label">Conversions</span>
            <div class="stat-value text-indigo"><%= dashboardCount %></div>
            <div class="text-muted small mt-2">Reached Dashboard</div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card border-start border-4 border-success">
            <span class="stat-label text-success">Success Rate</span>
            <div class="stat-value"><%= successRate %>%</div>
            <div class="progress mt-3" style="height: 6px;">
              <div class="progress-bar bg-success" style="width: <%= successRate %>%"></div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card border-start border-4 border-danger">
            <span class="stat-label text-danger">Churn Rate</span>
            <div class="stat-value"><%= abandonmentRate %>%</div>
            <div class="progress mt-3" style="height: 6px;">
              <div class="progress-bar bg-danger" style="width: <%= abandonmentRate %>%"></div>
            </div>
          </div>
        </div>
      </div>

      <div class="row g-4 mb-4">
        <div class="col-lg-8">
          <div class="chart-container h-100">
            <div class="section-header">
              <i class="fa-solid fa-filter text-primary"></i> Step-by-Step Conversion
            </div>
            <canvas id="funnelChart" style="max-height: 300px;"></canvas>
          </div>
        </div>
        
        <div class="col-lg-4">
          <div class="chart-container h-100">
            <div class="section-header">
              <i class="fa-solid fa-circle-exclamation text-danger"></i> Drop-off Points
            </div>
            <div class="table-responsive">
              <table class="table table-custom align-middle">
                <thead>
                  <tr>
                    <th>Workflow Step</th>
                    <th class="text-end">Lost Users</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><small class="fw-medium">Pre-Login</small></td>
                    <td class="text-end dropoff-text">-<%= stuckStats.at_visit_page %></td>
                  </tr>
                  <tr>
                    <td><small class="fw-medium">OTP Verification</small></td>
                    <td class="text-end dropoff-text">-<%= stuckStats.at_login %></td>
                  </tr>
                  <tr>
                    <td><small class="fw-medium">Dashboard Entry</small></td>
                    <td class="text-end dropoff-text">-<%= stuckStats.at_otp %></td>
                  </tr>
                </tbody>
              </table>
            </div>
            <p class="small text-muted mt-3 italic">These users started the process but didn't complete the current step.</p>
          </div>
        </div>
      </div>

      <div class="row g-4">
        <div class="col-md-6">
          <div class="chart-container">
            <div class="section-header"><i class="fa-solid fa-key text-warning"></i> Authentication Preference</div>
            <div class="row align-items-center">
              <div class="col-6">
                <canvas id="loginChart"></canvas>
              </div>
              <div class="col-6">
                <div class="d-flex align-items-center mb-2">
                  <span class="badge bg-success-subtle border border-success text-success me-2" style="width: 12px; height: 12px; padding:0;"> </span>
                  <small class="fw-bold">Phone OTP: <%= loginPhoneCount %></small>
                </div>
                <div class="d-flex align-items-center">
                  <span class="badge bg-primary-subtle border border-primary text-primary me-2" style="width: 12px; height: 12px; padding:0;"> </span>
                  <small class="fw-bold">Google: <%= loginOAuthCount %></small>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="chart-container">
            <div class="section-header"><i class="fa-solid fa-truck-fast text-info"></i> Post-Dashboard Intent</div>
            <div class="list-group list-group-flush">
              <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                <div>
                  <div class="fw-bold">Active Senders</div>
                  <small class="text-muted">Completed a parcel submission</small>
                </div>
                <span class="badge bg-primary rounded-pill"><%= sentCount %></span>
              </div>
              <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                <div>
                  <div class="fw-bold">Passive Viewers</div>
                  <small class="text-muted">Browsed dashboard only</small>
                </div>
                <span class="badge bg-light text-dark border rounded-pill"><%= notSentCount %></span>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 mb-5">
            <div class="chart-container">
                <div class="section-header"><i class="fa-solid fa-stopwatch text-indigo"></i> Performance Efficiency</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted small">Average Time (Send Start â†’ Submit)</span>
                        <h3 class="fw-bold mb-0 text-indigo"><%= timingData.avgSendFlow %> <span class="fs-6 fw-normal text-muted">seconds</span></h3>
                    </div>
                    <div class="text-end">
                        <i class="fa-solid fa-bolt-lightning text-warning fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Set global defaults for Chart.js to match the professional theme
    Chart.defaults.font.family = "'Inter', sans-serif";
    Chart.defaults.color = '#64748b';

    // Funnel Chart
    new Chart(document.getElementById('funnelChart'), {
      type: 'bar',
      data: {
        labels: ['Visited', 'Initiated Login', 'Received OTP', 'Dashboard Access'],
        datasets: [{
          label: 'Total Users',
          data: [<%= totalVisits %>, <%= loginCount %>, <%= otpCount %>, <%= dashboardCount %>],
          backgroundColor: ['#e2e8f0', '#94a3b8', '#6366f1', '#4f46e5'],
          borderRadius: 6,
          barThickness: 40
        }]
      },
      options: { 
        plugins: { legend: { display: false } },
        scales: { 
            y: { grid: { display: false }, beginAtZero: true },
            x: { grid: { display: false } }
        } 
      }
    });

    // Login Method Chart
    new Chart(document.getElementById('loginChart'), {
      type: 'doughnut',
      data: {
        labels: ['Phone', 'Google'],
        datasets: [{
          data: [<%= loginPhoneCount %>, <%= loginOAuthCount %>],
          backgroundColor: ['#10b981', '#4f46e5'],
          borderWidth: 0,
          cutout: '75%'
        }]
      },
      options: { 
        plugins: { legend: { display: false } }
      }
    });
  </script>
</body>
</html>