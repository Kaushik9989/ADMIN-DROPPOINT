<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Funnel Dashboard</title>

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

  <style>
    body {
  background: linear-gradient(135deg, #eef2ff, #fef9ff);
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  overflow-x: hidden;
}

.main-wrapper {
 
  padding: 2rem 2rem;
  max-width: 100%;
  box-sizing: border-box;
}

.card {
  border-radius: 15px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  background: #ffffff;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
}

.table th, .table td {
  vertical-align: middle;
}

@media (max-width: 991px) {
  .main-wrapper {
    margin-left: 0;
    padding: 1rem;
  }

  nav.sidebar {
    display: none;
  }
}

    body {
      background: linear-gradient(135deg, #eef2ff, #fef9ff);
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      overflow-x: hidden;
    }

    .main-wrapper {
      margin-left: 150px;
      padding: 2rem 2rem 2rem 2rem;
      max-width: 100%;
      box-sizing: border-box;
    }

    @media (max-width: 991px) {
      .main-wrapper {
        margin-left: 0;
        padding: 1.5rem 1rem;
      }

      nav.sidebar {
        display: none;
      }
    }


    body {
      background: linear-gradient(135deg, #eef2ff, #fef9ff);
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
      border-radius: 15px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      background: #ffffff;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    }

    .helli {

      padding-top: 2rem;
      padding-bottom: 2rem;



    }

    .table th,
    .table td {
      vertical-align: middle;
    }
  </style>
</head>

<body class="min-vh-100">
  <!-- Top Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark"
    style="background: #5a67d8; position: fixed; width: 100%; z-index: 1050">
    <div class="container-fluid">
      <a class="navbar-brand ms-3" href="/admin/dashboard">
        <i class="fas fa-tools me-2"></i>Admin Panel
      </a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto me-3">
          <li class="nav-item">
            <span class="navbar-text text-white">
              Welcome, <%= user.username %> <span class="badge bg-primary">Admin</span>
            </span>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm" href="/admin/logout">
              <i class="fas fa-sign-out-alt me-1"></i>Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="d-flex" style="padding-top: 56px">
    <!-- Sidebar -->
    <nav class="bg-white shadow-lg vh-100 p-3" style="width: 250px; position: fixed; top: 56px; left: 0">
      <ul class="nav flex-column">
        <li class="nav-item mb-2">
          <a class="nav-link text-dark" href="/admin/dashboard"><i class="fas fa-home me-2"></i>Dashboard</a>
        </li>
        <li class="nav-item mb-2">
          <a class="nav-link text-dark" href="/admin/add-locker"><i class="fas fa-plus me-2"></i>Add Locker</a>
        </li>
        <li class="nav-item mb-2">
          <a class="nav-link  text-dark " href="/admin/analytics">
            <i class="fa-solid fa-chart-line me-2"></i>Website Analytics
          </a>
        </li>
         <li class="nav-item mb-2">
      <a class="nav-link text-dark" href="/Action_funnel"><i class="fa-solid fa-chart-line me-2"></i>Funnel Actions</a>
    </li>
    <li class="nav-item mb-2">
      <a class="nav-link text-dark" href="/users"><i class="fa-solid fa-chart-line me-2"></i>User Management</a>
    </li>
        <li class="nav-item mb-2">
          <a class="nav-link text-dark" href="/admin/bookings"><i class="fas fa-list me-2"></i>All Bookings</a>
        </li>
        <li class="nav-item mt-4">
          <a class="btn btn-outline-danger w-100" href="/admin/logout"><i
              class="fas fa-sign-out-alt me-2"></i>Logout</a>
        </li>
      </ul>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid main-wrapper">
      <div class="flex-grow-1">
        <div class="main-wrapper">
          <h2 class="mb-4"> DropPoint Funnel Dashboard</h2>
          <!-- Summary -->
          <div class="row mb-4">
            <div class="col-md-3">
              <div class="card p-3">
                <h6>Total Visits</h6>
                <h4>
                  <%= totalVisits %>
                </h4>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card p-3">
                <h6>Dashboard Reached</h6>
                <h4>
                  <%= dashboardCount %>
                </h4>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card p-3 bg-success-subtle">
                <h6 class="text-success">Success Rate</h6>
                <h4>
                  <%= successRate %>%
                </h4>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card p-3 bg-danger-subtle">
                <h6 class="text-danger">Abandonment Rate</h6>
                <h4>
                  <%= abandonmentRate %>%
                </h4>
              </div>
            </div>
          </div>

          <!-- Funnel Chart -->
          <div class="card p-4 mb-4">
            <h5>Step-by-Step Funnel</h5>
            <canvas id="funnelChart" height="100"></canvas>
          </div>

          <!-- Stuck Points -->
          <div class="card p-4 mb-4">
            <h5>‚ùå Where Users Are Stuck</h5>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Step</th>
                  <th>Users Stuck</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Never clicked login</td>
                  <td>
                    <%= stuckStats.at_visit_page %>
                  </td>
                </tr>
                <tr>
                  <td>Clicked login but didn‚Äôt enter OTP</td>
                  <td>
                    <%= stuckStats.at_login %>
                  </td>
                </tr>
                <tr>
                  <td>Entered OTP but didn‚Äôt reach dashboard</td>
                  <td>
                    <%= stuckStats.at_otp %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- Login Breakdown -->
          <div class="card p-4 mb-4">
            <h5>üîê Login Method Breakdown</h5>
            <div class="row">
              <div class="col-md-6">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Method</th>
                      <th>Users</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Phone</td>
                      <td>
                        <%= loginPhoneCount %>
                      </td>
                    </tr>
                    <tr>
                      <td>Google</td>
                      <td>
                        <%= loginOAuthCount %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="col-md-6"><canvas id="loginChart" height="180"></canvas></div>
            </div>
          </div>

          <!-- Post Dashboard Behavior -->
          <div class="card p-4 mb-4">
            <h5>üì¶ After Dashboard</h5>
            <table class="table w-50">
              <thead>
                <tr>
                  <th>Action</th>
                  <th>Users</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Dashboard & Sent Parcel</td>
                  <td>
                    <%= sentCount %>
                  </td>
                </tr>
                <tr>
                  <td>Dashboard & Did NOT Send</td>
                  <td>
                    <%= notSentCount %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- Time Insight -->
          <div class="card p-4">
            <h5>‚è±Ô∏è Average Time Between Steps</h5>
            <table class="table w-50">
              <thead>
                <tr>
                  <th>Step</th>
                  <th>Avg Time (sec)</th>
                </tr>
              </thead>
              <tbody>

                <tr>
                  <td>Send Start ‚Üí Submit</td>
                  <td>
                    <%= timingData.avgSendFlow %>
                  </td>
                </tr>

              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div> <!-- /.main-wrapper -->
  </div> <!-- /.flex-grow-1 -->

  </div>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    new Chart(document.getElementById('funnelChart'), {
      type: 'bar',
      data: {
        labels: ['Visited', 'Login', 'OTP', 'Dashboard'],
        datasets: [{
          label: 'Users at Step',
          data: [<%= totalVisits %>, <%= loginCount %>, <%= otpCount %>, <%= dashboardCount %>],
          backgroundColor: ['#60a5fa', '#34d399', '#fbbf24', '#a78bfa']
        }]
      },
      options: { scales: { y: { beginAtZero: true } } }
    });

    new Chart(document.getElementById('loginChart'), {
      type: 'doughnut',
      data: {
        labels: ['Phone', 'Google'],
        datasets: [{
          label: 'Login Methods',
          data: [<%= loginPhoneCount %>, <%= loginOAuthCount %>],
          backgroundColor: ['#34d399', '#60a5fa']
        }]
      },
      options: { plugins: { legend: { position: 'bottom' } } }
    });
  </script>
</body>

</html>