<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard | Management</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

  <style>
    :root {
      --bg-body: #f8fafc;
      --card-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
      --accent: #4f46e5;
    }

    body {
      background-color: var(--bg-body);
      font-family: 'Inter', sans-serif;
      color: #1e293b;
    }

    .main-content {
      margin-left: 260px; /* Aligns with your new sidebar */
      padding-top: 80px; /* Aligns with your new topbar */
      transition: all 0.3s;
    }

    /* Stat Cards */
    .stat-card {
      background: white;
      border: 1px solid #e2e8f0;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: var(--card-shadow);
      display: flex;
      align-items: center;
    }

    .stat-icon {
      width: 48px;
      height: 48px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
      margin-right: 1rem;
    }

    /* Locker Grid Styling */
    .locker-card {
      background: white;
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.2s ease;
      box-shadow: var(--card-shadow);
    }

    .locker-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .locker-header {
      background: #f8fafc;
      padding: 1.25rem;
      border-bottom: 1px solid #e2e8f0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .compartment-pill {
      display: flex;
      justify-content: space-between;
      padding: 8px 12px;
      background: #ffffff;
      border: 1px solid #f1f5f9;
      border-radius: 8px;
      margin-bottom: 8px;
      font-size: 0.85rem;
    }

    .status-indicator {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      display: inline-block;
      margin-right: 6px;
    }

    .bg-active { background-color: #10b981; box-shadow: 0 0 8px rgba(16, 185, 129, 0.4); }
    .bg-inactive { background-color: #ef4444; }

    /* Custom Table for Summary */
    .summary-table {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      border: 1px solid #e2e8f0;
    }

    .summary-table th {
      background: #f8fafc;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #64748b;
      padding: 1rem;
    }

    .btn-delete-ghost {
      color: #94a3b8;
      background: transparent;
      border: none;
      padding: 5px 10px;
      border-radius: 6px;
    }

    .btn-delete-ghost:hover {
      color: #ef4444;
      background: #fef2f2;
    }

    @media (max-width: 992px) { .main-content { margin-left: 0; padding: 20px; padding-top: 100px; } }
  </style>
</head>

<body>
  <%- include("./imports/adminTopbar") %>
  <%- include("./imports/adminSidebar") %>

  <div class="main-content">
    <div class="container-fluid px-4">
      
      <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
          <h2 class="fw-bold mb-1">System Overview</h2>
          <p class="text-muted mb-0">Manage and monitor all locker deployments.</p>
        </div>
        <div class="d-flex gap-2">
           <span class="badge bg-white text-dark border p-2 px-3 rounded-pill">
             <i class="fa-solid fa-circle text-success me-1 small"></i> System Live
           </span>
        </div>
      </div>

      <div class="row g-4 mb-5">
        <div class="col-md-4">
          <div class="stat-card">
            <div class="stat-icon bg-primary text-white"><i class="fas fa-box"></i></div>
            <div>
              <small class="text-muted d-block">Total Lockers</small>
              <span class="fs-4 fw-bold"><%= lockers.length %></span>
            </div>
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="stat-card">
            <div class="stat-icon bg-warning text-dark"><i class="fas fa-map-marker-alt"></i></div>
            <div>
              <small class="text-muted d-block">Droppoints</small>
              <span class="fs-4 fw-bold">12 Active</span>
            </div>
          </div>
        </div>
      </div>

      <div class="summary-table mb-5">
        <table class="table mb-0 align-middle">
          <thead>
            <tr>
              <th>Locker Details</th>
              <th>Capacity</th>
              <th>Address</th>
              <th class="text-end">Action</th>
            </tr>
          </thead>
          <tbody>
            <% lockers.forEach(function(locker) { %>
            <tr>
              <td class="fw-semibold text-primary">
                <a href="/admin/locker/<%= locker.lockerId %>" class="text-decoration-none">
                  #<%= locker.lockerId %>
                </a>
              </td>
              <td><%= locker.compartments.length %> Units</td>
              <td class="text-muted small"><%= locker.location.address %></td>
              <td class="text-end">
                <form action="/admin/delete-locker" method="POST" class="d-inline">
                  <input type="hidden" name="lockerId" value="<%= locker.lockerId %>" />
                  <button class="btn-delete-ghost"><i class="fas fa-trash-alt"></i></button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <h4 class="fw-bold mb-4">Locker Unit Status</h4>
      <div class="row">
        <% if (lockers.length === 0) { %>
          <div class="col-12 text-center py-5">
            <p class="text-muted">No units currently deployed.</p>
          </div>
        <% } else { %>
          <% lockers.forEach(locker => { %>
            <div class="col-xl-4 col-md-6 mb-4">
              <div class="locker-card">
                <div class="locker-header">
                  <div>
                    <span class="text-muted small d-block">Locker ID</span>
                    <span class="fw-bold">UNIT-<%= locker.lockerId %></span>
                  </div>
                  <i class="fas fa-server text-light fs-3"></i>
                </div>
                <div class="card-body">
                  <div class="mb-3 d-flex justify-content-between">
                    <span class="small text-muted">Compartments</span>
                    <span class="badge bg-light text-dark border"><%= locker.compartments.length %> Total</span>
                  </div>
                  
                  <div class="compartment-list" style="max-height: 200px; overflow-y: auto;">
                    <% locker.compartments.forEach(comp => { %>
                      <div class="compartment-pill">
                        <span>ID <%= comp.compartmentId %></span>
                        <span>
                          <span class="status-indicator <%= comp.isBooked ? 'bg-inactive' : 'bg-active' %>"></span>
                          <span class="small text-muted"><%= comp.isBooked ? 'Occupied' : 'Available' %></span>
                        </span>
                      </div>
                    <% }) %>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>