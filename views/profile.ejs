<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <h2 class="mb-4">üë§ Profile Overview</h2>
  <div class="card mb-4">
    <div class="card-body">
      <h4><%= user.username %></h4>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Phone:</strong> <%= user.phone || 'N/A' %></p>
    </div>
  </div>
  <h3 class="mb-3 mt-5"><b>üì¨ Parcels To Be Collected</b></h3>
<% if (!user.parcels || user.parcels.length === 0) { %>
  <p>No parcels to collect.</p>
<% } else { %>
  <table class="table table-hover mb-5">
    <thead>
      <tr>
        <th>From</th>
        <th>Locker ID</th>
        <th>Compartment</th>
        <th>Dropped At</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% user.parcels.forEach(p => { %>
        <tr>
          <td><%= p.senderName || 'Unknown' %></td>
          <td><%= p.lockerId %></td>
          <td><%= p.compartmentId %></td>
          <td><%= new Date(p.droppedAt).toLocaleString() %></td>
          <td>
            <%= p.status %>
            <% if (p.status === "Waiting for Pickup") { %>
              <span class="badge bg-info text-dark">Ready</span>
            <% } %>
          </td>
          <td>
            <a href="/locker/directions/<%= p.lockerId %>/<%= p.compartmentId %>" class="btn btn-outline-primary btn-sm">
              üìç Directions
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>
  <h3 class="mb-3">üì¶ Booking History</h3>
  <% if (bookings.length === 0) { %>
    <p>No bookings found.</p>
  <% } else { %>
    <table class="table table-bordered" >
      <thead>
        <tr>
          <th>Locker ID</th>
          <th>Compartment</th>
          <th>Booking Time</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(b => { %>
          <tr>
            <td><%= b.lockerId %></td>
            <td><%= b.compartmentId %></td>
            <td><%= new Date(b.bookingTime).toLocaleString() %></td>
            <td>
              <%= b.status %>
              <% if (!b.isDelivered && b.status === "Booked") { %>
                <span class="badge bg-warning">Pending Delivery</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
