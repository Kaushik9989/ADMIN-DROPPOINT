<%- layout("layouts/boilerplate") %>
<h2>Courier Drop-off Panel</h2>

<% if (messages.success && messages.success.length > 0) { %>
  <div class="alert alert-success"><%= messages.success[0] %></div>
<% } %>

<% if (messages.error && messages.error.length > 0) { %>
  <div class="alert alert-danger"><%= messages.error[0] %></div>
<% } %>

<form action="/courier/dropoff" method="POST" style="max-width: 500px;" class="mt-4">
  <div class="form-group">
    <label>Locker ID</label>
    <input type="text" name="lockerId" class="form-control" required />
  </div>
  <div class="form-group">
    <label>Compartment ID</label>
    <input type="text" name="compartmentId" class="form-control" required />
  </div>
  <button class="btn btn-primary mt-3">Drop Package</button>
</form>
