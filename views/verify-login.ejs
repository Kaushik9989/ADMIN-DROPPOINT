<% layout("/layouts/boilerplate") %>

<!-- Main Content -->
<body class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(to bottom right, #e0f2fe, #fffaf0); font-family: 'Poppins', sans-serif;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
          <div class="card-body p-4 text-center">
            <!-- Header Icon -->
            <div class="bg-primary d-flex justify-content-center align-items-center mx-auto rounded-4 mb-3" style="width: 60px; height: 60px;">
              <i class="fas fa-lock text-white fs-4"></i>
            </div>
            <h3 class="card-title fw-bold">Login via OTP</h3>
            <p class="text-muted small">Enter the 6-digit code sent to your phone</p>

            <!-- Error Alert -->
            <% if (error) { %>
              <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

            <!-- OTP Form -->
            <form method="POST" action="/verify-login" class="mt-4">
              <div class="mb-3">
                <label for="otp" class="form-label fw-semibold">OTP</label>
                <input type="text" class="form-control form-control-lg text-center fs-5 fw-bold rounded" id="otp" name="otp" placeholder="6-digit code" required style="letter-spacing: 8px;" maxlength="6" />
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg rounded-pill">
                  <i class="fas fa-sign-in-alt me-2"></i>Login
                </button>
              </div>
            </form>

            <!-- Resend -->
            <p class="text-center mt-3 text-muted small">
              Didnâ€™t get it? <a href="/resend-login-otp" class="text-decoration-none fw-semibold text-primary">Resend OTP</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
