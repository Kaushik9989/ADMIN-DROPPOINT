<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Partner Requests | Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --border-color: #e5e7eb;
    }

    body {
      background-color: #f9fafb;
      font-family: 'Inter', sans-serif;
      color: #1f2937;
    }

    .main-content {
      margin-left: 260px;
      padding: 40px;
    }

    .table-container {
      background: white;
      border-radius: 12px;
      border: 1px solid var(--border-color);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .status-pill {
      padding: 4px 12px;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .status-pending { background: #fef3c7; color: #92400e; }
    .status-approved { background: #dcfce7; color: #166534; }
    .status-rejected { background: #fee2e2; color: #991b1b; }

    .api-key-text {
      font-family: monospace;
      letter-spacing: 1px;
    }

    @media (max-width: 992px) {
      .main-content { margin-left: 0; padding: 20px; }
    }
  </style>
</head>

<body>

  <%- include("./imports/adminTopbar") %>
  <%- include("./imports/adminSidebar") %>

  <div class="main-content">
    <div class="container-fluid mt-5">

      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="fw-bold">Partner Requests</h2>
          <p class="text-muted">Review and manage inbound partnership applications.</p>
        </div>

        <div class="d-flex gap-4 align-items-center">
          <div class="text-end">
            <span class="d-block small text-muted">Total Requests</span>
            <span class="fw-bold"><%= requests.length %></span>
          </div>

          <button class="btn btn-primary" onclick="openPartnersModal()">
            <i class="fa-solid fa-building me-2"></i> Show Partners
          </button>
        </div>
      </div>

      <% if (!requests || requests.length === 0) { %>
        <div class="text-center py-5 bg-white rounded-4 border">
          <p class="text-muted">Inbox is clear! No pending requests.</p>
        </div>
      <% } else { %>

      <div class="table-container">
        <div class="table-responsive">
          <table class="table mb-0">
            <thead class="table-light">
              <tr>
                <th>Company & Contact</th>
                <th>Contact Details</th>
                <th>Message</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% requests.forEach(r => { %>
                <tr>
                  <td>
                    <div class="fw-bold"><%= r.companyName %></div>
                    <div class="small text-muted"><%= r.contactName %></div>
                  </td>
                  <td>
                    <div class="small"><i class="fa-regular fa-envelope me-2"></i><%= r.email %></div>
                    <div class="small"><i class="fa-solid fa-phone me-2"></i><%= r.phone %></div>
                  </td>
                  <td style="max-width: 250px;">
                    <div class="text-truncate small" title="<%= r.message %>">
                      <%= r.message || "---" %>
                    </div>
                  </td>
                  <td>
                    <span class="status-pill status-<%= r.status %>">
                      <%= r.status.charAt(0).toUpperCase() + r.status.slice(1) %>
                    </span>
                  </td>
                  <td class="text-end">
                    <% if (r.status === "pending") { %>
                      <div class="d-flex justify-content-end gap-2">
                        <form method="POST" action="/admin/partner-requests/<%= r._id %>/approve">
                          <button class="btn btn-sm btn-success">Approve</button>
                        </form>
                        <form method="POST" action="/admin/partner-requests/<%= r._id %>/reject">
                          <button class="btn btn-sm btn-outline-danger">Reject</button>
                        </form>
                      </div>
                    <% } else { %>
                      <span class="text-muted small">Processed</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <% } %>

    </div>
  </div>

  <!-- PARTNERS MODAL -->
  <div class="modal fade" id="partnersModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title">üè¢ Partners</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead>
                <tr>
                  <th>Company</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>API Key</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody id="partnersTableBody">
                <tr>
                  <td colspan="6" class="text-center text-muted">Loading...</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    let partnersModal;

    function openPartnersModal() {
      if (!partnersModal) {
        partnersModal = new bootstrap.Modal(document.getElementById("partnersModal"));
      }
      partnersModal.show();
      loadPartners();
    }

    async function loadPartners() {
      const tbody = document.getElementById("partnersTableBody");
      tbody.innerHTML = `<tr><td colspan="6" class="text-center text-muted">Loading...</td></tr>`;

      try {
        const res = await fetch("/admin/api/partners");
        const data = await res.json();

        if (!data.success) throw new Error();

        tbody.innerHTML = "";

        data.partners.forEach(p => {
          const masked = "‚Ä¢".repeat(12);

          const tr = document.createElement("tr");
          tr.innerHTML = `
            <td><strong>${p.companyName}</strong></td>
            <td>${p.name}</td>
            <td>${p.email}</td>
            <td>${p.phone}</td>
            <td>
              <span class="api-key-text" data-key="${p.apiKey}">${masked}</span>
              <button class="btn btn-sm btn-light ms-2" onclick="toggleKey(this)">
                <i class="fa-regular fa-eye"></i>
              </button>
              <button class="btn btn-sm btn-light ms-1" onclick="copyKey('${p.apiKey}')">
                <i class="fa-regular fa-copy"></i>
              </button>
            </td>
            <td>
              ${p.isActive ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-secondary">Disabled</span>'}
            </td>
          `;

          tbody.appendChild(tr);
        });

      } catch (e) {
        tbody.innerHTML = `<tr><td colspan="6" class="text-danger text-center">Failed to load partners</td></tr>`;
      }
    }

    function toggleKey(btn) {
      const span = btn.parentElement.querySelector(".api-key-text");
      const icon = btn.querySelector("i");

      if (span.textContent.includes("‚Ä¢")) {
        span.textContent = span.dataset.key;
        icon.className = "fa-regular fa-eye-slash";
      } else {
        span.textContent = "‚Ä¢".repeat(12);
        icon.className = "fa-regular fa-eye";
      }
    }

    function copyKey(key) {
      navigator.clipboard.writeText(key);
      alert("‚úÖ API key copied!");
    }
  </script>

</body>
</html>
